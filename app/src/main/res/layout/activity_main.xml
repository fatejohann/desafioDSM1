<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DesafÃ­o DSM 1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnPromedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/ic_promedio"
    android:text="Calcular Promedio"
    android:textSize="18sp"
    android:padding="12dp"
    android:textColor="@android:color/white"
    android:background="@color/purple_200" />

    <Button
        android:id="@+id/btnSalario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPromedio"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/ic_salario"
    android:text="Calcular Descuentos Salario"
    android:textSize="18sp"
    android:padding="12dp"
    android:textColor="@android:color/white"
    android:background="@color/purple_200" />

    <Button
        android:id="@+id/btnCalculadora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSalario"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/ic_calculadora"
    android:text="Calculadora"
    android:textSize="18sp"
    android:padding="12dp"
    android:textColor="@android:color/white"
    android:background="@color/purple_200" />

</RelativeLayout>
